[Unit]
Description=Worker app for the guardian's transcription service
Documentation=https://github.com/guardian/transcription-service
After=network.target

[Service]
Type=simple
User=ubuntu
ExecStart=/usr/bin/node /opt/transcription-service/index.js
Restart=on-failure
Environment="LD_LIBRARY_PATH=/usr/local/cuda/lib:/usr/local/cuda/lib64"
Environment="PATH=/usr/local/cuda/bin:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin"
Environment="CUDA_HOME=/usr/local/cuda"

[Install]
WantedBy=multi-user.target
